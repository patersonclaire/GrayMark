
<h3 class="card-title"><%= @first_school_menu.date.strftime("%d %B '%y") %> - <%= (@first_school_menu.date + 4).strftime("%d %B '%y") %> </h3>
<br>
<br>

<div class="cards">
  <% @first_week_menus.where(tailored: true).each do |menu| %>
    <div class="card">
      <div class="card-body">
        <br>
        <%# <p class="card-text"><%= school.postcode %>
          <h3>Allergen Free Menu</h3>
        <div>
          <br>
          <%= link_to "View menu", menu_path(menu), class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  <% end %>
  <div class="card">
    <% menu = @first_week_menus.find_by(tailored: false) %>
    <div class="card-body">
      <br>
      <h3>Provided Menu </h3>
      <%# <p class="card-text"><%= school.postcode %>
      <div>
        <br>
        <%= link_to "View menu", menu_path(menu), class: "btn btn-primary" %>
      </div>
    </div>
  </div>
</div>
<br>
<br>
<br>

